<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.innoplayer.testapp.VideoPlayerActivity">

    <co.innoplayer.InnoPlayerView
        android:id="@+id/innoPlayerView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:audio_player_only="false"
        app:controller_layout_id="@layout/clientinnoplayercustom_control"
        app:fast_backward_increment="20000"
        app:fast_forward_increment="20000"
        app:inno_stretching="cutted" />

    <!--        />-->


    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/innoPlayerView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/black"
        android:textSize="20sp" />
</RelativeLayout>